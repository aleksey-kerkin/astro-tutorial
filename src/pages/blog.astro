---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const pageTitle = "My Astro Learning Blog";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>{pageTitle}</title>
  </head>
  <body>
    <header>
      <Header />
    </header>
    <main class="container">
      <h1
        class="mb-8 bg-gradient-to-br from-sky-100 via-sky-300 to-sky-600 bg-clip-text text-center font-mono text-8xl font-black text-transparent"
      >
        {pageTitle}
      </h1>
      <p class="paragraph">
        This is where I will post about my journey learning Astro.
      </p>
      <ul>
        <li>
          <a class="hover:text-sky-500/60 hover:underline" href="/posts/post-1/"
            >Post 1</a
          >
        </li>
        <li>
          <a class="hover:text-sky-500/60 hover:underline" href="/posts/post-2/"
            >Post 2</a
          >
        </li>
        <li>
          <a class="hover:text-sky-500/60 hover:underline" href="/posts/post-3/"
            >Post 3</a
          >
        </li>
      </ul>
    </main>
    <Footer />
    <script>
      import "../scripts/menu.js";
    </script>
  </body>
</html>
